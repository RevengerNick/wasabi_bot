generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // <-- ГЛАВНОЕ ИЗМЕНЕНИЕ
  url      = env("DATABASE_URL")
}

model User {
  // Меняем Int на String, @id на @default(uuid())
  id String @id @default(uuid())

  telegram_id  BigInt?  @unique
  phone_number String?  @unique
  first_name   String?
  username     String?
  created_at   DateTime @default(now())

  orders Order[]
}

model Category {
  id          Int    @id @default(autoincrement())
  name        String @unique
  order_index Int    @default(0)

  products Product[]
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String? @db.Text
  price       Float
  image_url   String?

  category_id Int
  category    Category @relation(fields: [category_id], references: [id])

  orderItems OrderItem[]
}

model Order {
  id        Int    @id @default(autoincrement())
  public_id String @unique @default(cuid())
  user_id   String
  user      User   @relation(fields: [user_id], references: [id])

  status      String @default("new") // new, confirmed, in_delivery, completed, canceled
  total_price Float
  final_price Float // Цена после применения скидки

  delivery_address String?
  contact_phone    String

  created_at DateTime @default(now())

  promocode_used String?

  items OrderItem[]
}

model OrderItem {
  id       Int   @id @default(autoincrement())
  order_id Int
  order    Order @relation(fields: [order_id], references: [id])

  product_id Int
  product    Product @relation(fields: [product_id], references: [id])

  quantity       Int
  price_at_order Float // Цена товара на момент заказа

  @@unique([order_id, product_id])
}

model Promocode {
  id               Int       @id @default(autoincrement())
  code             String    @unique
  discount_percent Float
  is_active        Boolean   @default(true)
  expires_at       DateTime?
}
